<h2>Lista de categorias</h2>
<a href="/admin/categorias/add">
  <button class="btn btn-success">Nova categoria</button>
</a>

{{#each categorias}}

  <div class="card mt-2">
    <div class="card-body">
      <h4>{{nome}}</h4>
      <small>{{slug}}</small>
      <br />
      <small>Data: {{date}}</small>
      <br />
      <a href="/admin/categorias/editar/{{_id}}"><button
          class="btn btn-success mt-3"
        >Editar categoria</button></a>

      <a href="/admin/categorias/deletar/{{_id}}" method="post">
        <button class="btn btn-danger mt-2">Deletar categoria</button>
      </a>
    </div>
  </div>
{{else}}
  <h5 class="mt-3">Opss... Nenhuma categoria registrada.</h5>
{{/each}}