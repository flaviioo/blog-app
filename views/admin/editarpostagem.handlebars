{{#each erros}}
  <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<div class="card">
  <div class="card-body">
    <h4>Editar postagem</h4>
    <form action="/admin/postagem/atualizar" method="post">
      <input type="hidden" name="id" value="{{postagem.id}}" />
      <label for="nome">Titulo:</label>
      <input
        type="text"
        id="titulo"
        name="titulo"
        class="form-control"
        value="{{postagem.titulo}}"
      />
      <br />
      <label for="slug">Slug:</label>
      <input
        type="text"
        id="slug"
        name="slug"
        class="form-control"
        value="{{postagem.slug}}"
      />
      <br />
      <label for="descricao">Descrição:</label>
      <input
        type="text"
        id="descricao"
        name="descricao"
        class="form-control"
        value="{{postagem.descricao}}"
      />
      <br />
      <label for="conteudo">Conteúdo:</label>
      <textarea
        name="conteudo"
        id="conteudo"
        class="form-control"
      >{{postagem.conteudo}}
      </textarea>
      <br />
      <label for="categoria">Categoria:</label>
      <select name="categoria" id="categoria" class="form-control">
        <option value="{{categoria.id}}">{{categoria.nome}}</option>
      </select>
      <br />
      <button type="submit" class="btn btn-success mt-4">Editar</button>
    </form>
  </div>
</div>